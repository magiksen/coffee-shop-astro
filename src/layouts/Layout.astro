---
import Header from '@/components/ui/Header.astro'
import Footer from '@/components/ui/Footer.astro'
import '@/styles/global.css' 

interface Props {
    title: string
    subtitle: string
    bgImage: string
}

const { title, subtitle, bgImage } = Astro.props
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafeter√≠a desde 1939: {title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="bg-coffee-100">
    <Header 
        bgImage={bgImage} 
        subtitle={subtitle}
    />
    <main class="bg-white p-20 max-w-7xl mx-auto lg:-mt-20 relative">
        <h2 class="text-4xl font-black pb-10 text-center uppercase after:coffee-icon text-coffee-900">{title}</h2>
        <slot />
    </main>

    <slot name="after-main-content" />
    <Footer />
</body>
</html>
